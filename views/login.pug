extends base.pug 
block style 
   link(rel="stylesheet", href="./stylesheets/loginstyle.css")

block content 
  .box 
    form(action='/login' method='post')
      //- .imgcontainer
      //-   img.avatar(src='img_avatar2.png' alt='Avatar')
      .container
        h2 Login Form
        if(msg!='')
          h2 #{msg}
        label(for='acc')
          b Account No : 
        input(type='text' placeholder='Enter Account No ' name='acc' required='')
        label(for='psw')
          b Password
        input(type='password' placeholder='Enter Password' name='psw' required='')
        button.btns(type='submit') Login
        label
          input(type='checkbox' checked='checked' name='remember')
          |  Remember me
      .container(style='background-color:#f1f1f1')
        button.cancelbtn.btns(type='button') Cancel
        span.psw
          | Forgot 
          a(href='#') password?
